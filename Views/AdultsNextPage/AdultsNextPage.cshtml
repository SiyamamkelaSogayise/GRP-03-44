    <script>
        $(document).ready(function () {
            // Define a dictionary to store province-city mapping
            var provinceCities = {
                "Eastern Cape": ["Port Elizabeth", "East London", "Mthatha", "King Williams Town", "Queens Town"],
                "Western Cape": ["Khayelitsha", "Parow", "Stellenbosch", "Bellville", "Paarl"],
                "Gauteng": ["Johannesburg", "Pretoria", "Thembisa", "Soweto"],
                "Kwazulu-Natal": ["Durban", "Richards Bay", "Umhlanga Rocks", "St. Lucia", "Scottsburgh"],
                "Limpompo": ["Polokwane", "Giyane", "Thohoyandou", "Thabazimbi", "Musina"]
            };

            // Define a dictionary to store city-suburb mapping
            var citySuburbs = {
                "Port Elizabeth": ["Summerstrand", "Walmer", "Blue Water Bay"],
                "East London": ["Amalinda", "Gonubie", "Mdatsane"],
                "Mthatha": ["Panne", "North Crest", "Water Fall"],
                "King Williams Town": ["Ginsburg", "Sweet Water", "Zwelitsha"],
                "Queens Town": ["Amberdale", "Komani Park", "Ezibeleni"],
                "Khayelitsha": ["Litha Park", "Holomisa", "WK Section"],
                "Parow": ["Glenlily", "Parow North", "Beaconvale"],
                "Stellenbosch": ["Jamestown", "Brandwacht", "Dalsig"],
                "Bellville": ["Tygervalley", "Durbanville", "Amanda Glen"],
                "Paarl": ["Chicago", "Dalvale", "Bertville"],
                "Johannesburg": ["Sandton", "Randburg", "Rosebank"],
                "Pretoria": ["Centurion", "Waterkloof", "Pretoria North"],
                "Thembisa": ["Litiba Section", "Moyeni Section", "Thibeng"],
                "Soweto": ["Orlando", "Diepkloof", "Protea Glen"],
                "Durban": ["eThekwini", "uMhlanga", "Pinetown"],
                "Richards Bay": ["Kwa-biyela", "Kwa-malandela", "Mtubatuba"],
                "Mhlanga Rocks": ["Izinga", "La Lucia", "Ridgeside"],
                "Polokwane": ["Penina Park", "Annadale", "Ivy Park"],
            };

            // Function to update city options based on the selected province
            function updateCityOptions(selectedProvince) {
                var cityDropdown = $("#cityDropdown");
                cityDropdown.empty();

                var cities = provinceCities[selectedProvince];
                if (cities) {
                    cities.forEach(function (city) {
                        cityDropdown.append($("<option>").val(city).text(city));
                    });
                }

                // Trigger a change event to populate suburbs for the initial city
                cityDropdown.change();
            }

            // Function to update suburb options based on the selected city
            function updateSuburbOptions(selectedCity) {
                var suburbDropdown = $("#suburbDropdown");
                suburbDropdown.empty();

                var suburbs = citySuburbs[selectedCity];
                if (suburbs) {
                    suburbs.forEach(function (suburb) {
                        suburbDropdown.append($("<option>").val(suburb).text(suburb));
                    });
                }
            }

            // Attach change event handlers to the province and city dropdowns
            $("#provinceDropdown").on("change", function () {
                var selectedProvince = $(this).val();
                updateCityOptions(selectedProvince);
            });

            $("#cityDropdown").on("change", function () {
                var selectedCity = $(this).val();
                updateSuburbOptions(selectedCity);
            });

            // Initialize city options based on the initial selected province
            updateCityOptions($("#provinceDropdown").val());
        });
    </script>

