@{
    Layout = "_LayoutChronicMedication";
}
@model IEnumerable<GeeksProject02.Models.MedicalHistory>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1 ,shrink-to-fit=no ">
    <title>Image on the Right</title>
    <link rel="stylesheet" href="~/css/ViewMedical.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DemoMpho.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" asp-append-version="true" />
    <script src="http://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

</head>
<body>
    <header>
        <nav class="section__container nav__container">
            <div class="nav__logo">e-<span>Nompilo</span></div>
            <ul class="nav__links">
                <li><Link to="/">Home</li>
                <li><Link to="/about-us">About Us</li>
                <li><Link to="/services">Services</li>
                <li><Link to="/contact-us">Contact Us</li>


            </ul>
            <button class="btn">Contact Us</button>
        </nav>
    </header>
     @foreach (var mpho in Model)
    {

        <div class="medical-history">
            <h2>Medical History</h2>
            </div>

            <div class="section">
            <h3 class="section-heading">Medical Conditions</h3>
                <ul>
                   
                    <li><strong>Name:</strong>       @mpho.Name </li>
                    <li><strong>Gender:</strong>     @mpho.Surname </li>
                    <li><strong>Mobile Number:</strong> @mpho.MobileNumber </li>
                    <li><strong>Status:</strong>  @mpho.Status</li>
                    <li><strong>Date Of Birth:</strong>  @mpho.DateOfBirth</li>
                    <li><strong>LifeStyle:</strong>  @mpho.LifeStyle</li>
               
                  
                   
                    
                </ul>
            </div>
            <div class="section">

            <h3 class="section-heading">Medical Conditions</h3>
         
     <ul>
            <li><strong>Allergies:</strong>  @mpho.Allergies</li>
            <li><strong>Surgiers Undergone:</strong>  @mpho.surgiersUndergone</li>
            <li><strong>Family Medical History:</strong>  @mpho.FamilyMedicalHistory </li>
            <li><strong>Previous Medication:</strong>  @mpho.PreviousMedication</li>
            <li><strong>Immunization History:</strong>  @mpho.ImmunizationHistory</li>
            <li><strong>Hospitalizations:</strong>  @mpho.Hospitalizations </li>
            <li class="list-heading"></li>
</ul>
            </div>
            <div class="section">

            <h3 class="section-heading">Emegerncy Contacts</h3>
            <ul>
            

            <li><strong>Home TelePhone Number:</strong>  @mpho.HomeTelePhoneNumber </li>
            <li><strong>Work TelePhone Number:</strong>  @mpho.WorkTelePhoneNumber</li>
            <li><strong>Next Of Kin Number:</strong>  @mpho.NextOfKinNumber </li>
            <li><strong>Insurence Provider Number:</strong>  @mpho.InsurenceProvideNumber</li>
            </ul>
            </div>
           
         


        


            
    }























    <footer class="footer">
        <div class="section__container footer__container">
            <div class="footer__col">
                <h3>e-<span>Nompilo</span></h3>
                <p>
                    We are honored to be a part of your healthcare journey and committed
                    to delivering compassionate, personalized, and top-notch care every
                    step of the way.
                </p>
                <p>
                    Trust us with your health, and let us work together to achieve the
                    best possible outcomes for you and your loved ones.
                </p>
            </div>
            <div class="footer__col">
                <h4>About Us</h4>
                <p>Home</p>
                <p>About Us</p>
                <p>Work With Us</p>
                <p>Our Blog</p>
                <p>Terms & Conditions</p>
            </div>
            <div class="footer__col">
                <h4>Services</h4>
                <p>Search Terms</p>
                <p>Advance Search</p>
                <p>Privacy Policy</p>

            </div>
            <div class="footer__col">
                <h4>Contact Us</h4>
                <p>
                    <i class="ri-map-pin-2-fill"></i> 45, ForestHill Summerstrand, Port Elizabeth
                </p>
                <p><i class="ri-mail-fill"></i> eNompilo@gmail.com</p>
                <p><i class="ri-phone-fill"></i> (+012) 3456 789</p>
            </div>
        </div>
        <div class="footer__bar">
            <div class="footer__bar__content">
                <p>Copyright © 2023 Innovative Geeks. All rights reserved.</p>
                <div class="footer__socials">
                    <span><i class="ri-instagram-line"></i></span>
                    <span><i class="ri-facebook-fill"></i></span>
                    <span><i class="ri-heart-fill"></i></span>
                    <span><i class="ri-twitter-fill"></i></span>
                </div>
            </div>
        </div>
    </footer>
    </body>
    </html>
