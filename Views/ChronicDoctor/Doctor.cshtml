@{
    Layout = "_layoutChronicMedication";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1 ,shrink-to-fit=no ">
    <title>Image on the Right</title>
    <link rel="stylesheet" href="~/css/DoctorView.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DemoMpho.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" asp-append-version="true" />
    <script src="http://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

</head>
<body>
    <header>
        <nav class="section__container nav__container">
            <div class="nav__logo">e-<span>Nompilo</span></div>
            <ul class="nav__links">
                <a asp-action="ViewMedicalHistory" asp-controller="ChronicDoctor">
                <li><Link to="/">View Medical History</li>
                </a>
                <a asp-action="ViewAppointments" asp-controller="ChronicDoctor">
                <li><Link to="/about-us">View Appointments</li>
                </a>
                <a asp-action="" asp-controller="">
                <li><Link to="/contact-us">View Medical record</li>
                </a>

            </ul>
            @* <a asp-action="SubmittDetails" asp-controller="HistoryMedical" class="btn">Medical History</a> *@
            <a asp-action="Schedule" asp-controller="NextMeeting" class="btn">Schedule Meeting</a>
        </nav>
    </header>





    <div class="container">
        <div class="image"></div>
        <div class="text">
            <h2>chronic Medication</h2>
            <p>Welcome to our Chronic Medication facility.<br /> your trusted source for comprehensive information, guida</p>
        </div>
    </div>
    <div class="underlined-heading">
        <h4>SERVICES TO BE RENDERED</h4>
    </div>

    <div class=" card-container">

        <div class="card1">
            <div class="icon">
                <i class="fas fa-heart"></i>
            </div>
            <h1>Daignosis Form</h1>
            <a asp-action="SaveDiagnosis" asp-controller="ChronicDoctor" class="btn">Click</a>
        </div>
        @*   card2 *@
        <div class="card2">
            <div class="icon">
                <i class="fas fa-pills"></i>
            </div>
            <h1>Prescribe Medication</h1>
            <a asp-action="PrescribeMedicine" asp-controller="Prescribe" class="btn">Click</a>
        </div>
        @*   card3 *@
        <div class="card3">
            <div class="icon">
                <i class="fas fa-book"></i>
            </div>
            <h1>Notes for patients</h1>
            <a asp-action="AddNotes" asp-controller="Notes" class="btn">Click</a>
        </div>

    </div>
    <div class="underlined-heading">
        <h4>INFORMATION</h4>
    </div>

    <div class=" card-container">

        <div class="card1">
            <div class="icon">
                <i class="fas fa-heart"></i>
            </div>
            <h1>Patients Diagnosis</h1>
            <a asp-action="Diagnosis" asp-controller="ChronicDoctor" class="btn">Click</a>
        </div>
        @*   card2 *@
        <div class="card2">
            <div class="icon">
                <i class="fas fa-pills"></i>
            </div>
            <h1>Prescriptions</h1>
            <a asp-action="ViewPrescription" asp-controller="ChronicDoctor" class="btn">Click</a>
        </div>
        @*   card3 *@
        <div class="card3">
            <div class="icon">
                <i class="fas fa-book"></i>
            </div>
            <h1>Notes for patients</h1>
            <a asp-action="viewRefills" asp-controller="ChronicDoctor" class="btn">Click</a>
        </div>

    </div>










































    <footer class="footer">
        <div class="section__container footer__container">
            <div class="footer__col">
                <h3>e-<span>Nompilo</span></h3>
                <p>
                    We are honored to be a part of your healthcare journey and committed
                    to delivering compassionate, personalized, and top-notch care every
                    step of the way.
                </p>
                <p>
                    Trust us with your health, and let us work together to achieve the
                    best possible outcomes for you and your loved ones.
                </p>
            </div>
            <div class="footer__col">
                <h4>About Us</h4>
                <p>Home</p>
                <p>About Us</p>
                <p>Work With Us</p>
                <p>Our Blog</p>
                <p>Terms & Conditions</p>
            </div>
            <div class="footer__col">
                <h4>Services</h4>
                <p>Search Terms</p>
                <p>Advance Search</p>
                <p>Privacy Policy</p>

            </div>
            <div class="footer__col">
                <h4>Contact Us</h4>
                <p>
                    <i class="ri-map-pin-2-fill"></i> 45, ForestHill Summerstrand, Port Elizabeth
                </p>
                <p><i class="ri-mail-fill"></i> eNompilo@gmail.com</p>
                <p><i class="ri-phone-fill"></i> (+012) 3456 789</p>
            </div>
        </div>
        <div class="footer__bar">
            <div class="footer__bar__content">
                <p>Copyright © 2023 Innovative Geeks. All rights reserved.</p>
                <div class="footer__socials">
                    <span><i class="ri-instagram-line"></i></span>
                    <span><i class="ri-facebook-fill"></i></span>
                    <span><i class="ri-heart-fill"></i></span>
                    <span><i class="ri-twitter-fill"></i></span>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>


