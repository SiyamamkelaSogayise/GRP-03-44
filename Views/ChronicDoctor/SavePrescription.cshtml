    <h2 class=" heading">Add Prescription</h2>
    <form class="form-data" method="post" asp-action="SavePrescription">
        <div asp-validation-summary="ModelOnly" class="text-danger> </div>
        <div class="form-head">

            @*  <h2>Book Appointment</h2> *@
        </div>

        <label class="form-label fs-14;"> Doctor Name<span style="color: red;">*</span>:</label><br>
        <input type="text" class="form-control" placeholder="Dr Michael" asp-for="DoctorName"><br><br>
    <span asp-validation-for="DoctorName" class="text-danger"></span><br />

        <label class="form-label fs-14;">Licence Number<span style="color: red;">*</span>:</label><br>
        <input type="number" class="form-control" placeholder="2345667" asp-for="LicenceNUmber"><br><br>
        <span asp-validation-for="LicenceNUmber" class="text-danger"></span><br />

        <label class="form-label fs-14;">Date<span style="color: red;">*</span>:</label><br>
        <input type="date" class="form-control" placeholder="2020/12/2024" asp-for="Date"><br><br>
        <span asp-validation-for="Date" class="text-danger"></span><br />

        <label class="form-label fs-14;">Patient Name<span style="color: red;">*</span>:</label><br>
        <input type="text" class="form-control" placeholder="Siphosethu" asp-for="PatientName"><br><br>
        <span asp-validation-for="PatientName" class="text-danger"></span><br />


        <label class="form-label fs-14;"> Medication Name<span style="color: red;">*</span>:</label><br>
        <input type="text" class="form-control" placeholder="Panado" asp-for="MedicationName"><br><br>
        <span asp-validation-for=" MedicationName" class="text-danger"></span><br />

        <label class="form-label fs-14;"> Dosage Instruction<span style="color: red;">*</span>:</label><br>
        <input type="text" class="form-control" placeholder="4 times a day" asp-for="DosageInstruction"><br><br>
        <span asp-validation-for=" DosageInstruction" class="text-danger"></span><br />

        <label class="form-label fs-14;"> Signiture by Name<span style="color: red;">*</span>:</label><br>
        <input type="text" class="form-control" placeholder="Dr Michael" asp-for="Signiture"><br><br>
        <span asp-validation-for=" Signiture" class="text-danger"></span><br />











        <div class=" form-group row">
            <div class=" col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class=" btn btn-info w-75" value="SavePrescription" />

                </div>
                <div class="col">
                    <a asp-action="Doctor" class="btn btn-dark w-75">Black</a>
                </div>
            </div>
        </div>
    </form>





















