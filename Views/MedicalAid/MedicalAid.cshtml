    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Define a dictionary to store province-city mapping
            var provinceCities = {
                "For Adults": ["Influenza (Flu)", "Pneumococcal", "Tetanus, Diphtheria, Pertussis (Tdap/Td)", "Hepatitis A and B", "Human Papillomavirus (HPV)", "Covid-19"],
                "For Kids": ["Hepatitis B", "Rotavirus(RV)", "Diphtheria", "Pertussis(Whooping cough) ", "Tetanus", "Haemophilus influenzae type b"],
            };

            // Function to update city options based on the selected province
            function updateCityOptions(selectedProvince) {
                var cityDropdown = $("#cityDropdown");
                cityDropdown.empty();

                var cities = provinceCities[selectedProvince];
                if (cities) {
                    cities.forEach(function (city) {
                        cityDropdown.append($("<option>").val(city).text(city));
                    });
                }
            }

            // Attach change event handler to the province dropdown
            $("#provinceDropdown").on("change", function () {
                var selectedProvince = $(this).val();
                updateCityOptions(selectedProvince);
            });

            // Initialize city options based on the initial selected province
            updateCityOptions($("#provinceDropdown").val());
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#medicalAidDropdown").on("change", function () {
                var selectedOption = $(this).val();
                if (selectedOption === "yes") {
                    alert("Please provide your medical aid information.");
                    $("#medicalAidFields").show();
                    
                } else {
                    $("#medicalAidFields").hide();
                }
            });

            $("#submitButton").on("click", function () {
                // Perform form submission or other actions
            });
        });
    </script>
    

</head>
