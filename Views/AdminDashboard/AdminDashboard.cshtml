<h1>Booking Management System </h1>
<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Names</th>
            <th>Date of Birth</th> <!-- Matched to patientbooking.DOB -->
            <th>Gender</th> <!-- Matched to patientbooking.Gender -->
            <th>Doctor</th> <!-- Matched to patientbooking.AvailableDays -->
            <th>Preferred Appointment Time</th> <!-- Matched to patientbooking.PreferredAppointmentTime -->
            <th>Available Days</th> <!-- Matched to patientbooking.AvailableDays -->
            <th>Appointment Date</th> <!-- Matched to patientbooking.AppointmentDate -->
            <th>Payment Method</th> <!-- Matched to patientbooking.PaymentMethod -->
            <th>Medical Aid Number</th> <!-- Matched to patientbooking.MedicalAidNumber -->
            <th>Medical Aid Name</th> <!-- Matched to patientbooking.MedicalAidName -->
            <th>Status</th> <!-- Corresponding to ApprovalStatus -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var addBooking in Model)
        {
            <tr>
                <td>@addBooking.Id</td>
                <td>@(addBooking.FirstName + " " + addBooking.Surname)</td>
                <td>@addBooking.DOB</td>
                <td>@addBooking.Gender</td>
                <td>@addBooking.AvailableDays</td>
                <td>@addBooking.PreferredAppointmentTime</td>
                <td>@addBooking.AppointmentDate</td>
                <td>@addBooking.IsMedicalAidMember</td>
                <td><a href="AddBookings/View/@addBooking.Id">View</a></td>
                
