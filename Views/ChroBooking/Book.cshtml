@{
    Layout = "_LayoutChronicMedication";
}
@model GeeksProject02.Models.BookingChronic

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1 ,shrink-to-fit=no ">
    <title>Image on the Right</title>
    <link rel="stylesheet" href="~/css/StyleChroBooking.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DemoMpho.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" asp-append-version="true" />
    <script src="http://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

</head>
<body>
    <header>
        <nav class="section__container nav__container">
            <div class="nav__logo">e-<span>Nompilo</span></div>
            <ul class="nav__links">
                <li><Link to="/">Home</li>
                <li><Link to="/about-us">About Us</li>
                <li><Link to="/services">Services</li>
                <li><Link to="/contact-us">Contact Us</li>


            </ul>

            <a asp-action="Manage" asp-controller="ChroBooking" class="btn"> Booking Info</a>
        </nav>
    </header>
    <h1 class="Underlined-heading">Place your Booking For Consulating</h1>
    <div class="Container">

        <div class="row no-margin">
            <div class="col-sm-7">
                <div class="content">

                    @*  <p>
                    Cancer is a complex and often life-threatening disease characterized by the uncontrolled growth and division of abnormal cells within the body. These abnormal cells, called cancer cells,
                    can invade nearby tissues and organs, disrupting their normal function.
                    Additionally, cancer cells can spread to other parts of the body through the
                    bloodstream or lymphatic system, a process known as metastasis
                    </p> *@

                    @*  <a asp-area="" asp-controller="Booking" asp-action="Manage">Managing Appointments</a> *@
                </div>
            </div>
            <div class="col-sm-5">
                <form class="form-data" method="post" asp-action="Book">
                    <div asp-validation-summary="ModelOnly" class="text-danger> </div>
                    <div class="form-head">

                        <h2>Book Appointment</h2>
                    </div>


                    <div class="form-body">
                        <div class="row form-row">

                            <label class=" form-label fs-14;">Enter AppointmentType:</label>
                            <select asp-for="PreferredGenderConsultant" class="form-control">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            @*      <input asp-for="BookingType" type="text" class="form-control" /> *@
                            <span asp-validation-for="PreferredGenderConsultant" class="text-danger"></span>

                        </div>
                        <div class="row form-row">
                            <label class=" form-label fs-14;">Appointment Date:</label>
                            <input asp-for="BookingDate" type="date" class="form-control" />

                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>
                        <div class="row form-row">



                            <label class="form-label fs-14" ;">Enter Time: </label>
                            <input asp-for="BookingTime" type="time" class="form-control" />
                            <span asp-validation-for="BookingTime" class="text-danger"></span>
                        </div>







                        <div class="row form-row">

                            <div class="col">
                                <input type="submit" class=" btn btn-info w-75" onclick="openPopup()" value="Book" />
                                <div class="popup" id="popup">
                                    <img src="/css/tick.jpg" />
                                    <h2>thank you</h2>
                                    <p>your details have been successfully submited thank you!</p>
                                    <button type="button" onclick="closePopup()">ok</button>
                                    <script src="/js/script.js"></script>
                                </div>
                                 

                            </div>

                        </div>
                    </div>
                </form>
            </div>


        </div>
    </div>

































    <footer class="footer">
        <div class="section__container footer__container">
            <div class="footer__col">
                <h3>e-<span>Nompilo</span></h3>
                <p>
                    We are honored to be a part of your healthcare journey and committed
                    to delivering compassionate, personalized, and top-notch care every
                    step of the way.
                </p>
                <p>
                    Trust us with your health, and let us work together to achieve the
                    best possible outcomes for you and your loved ones.
                </p>
            </div>
            <div class="footer__col">
                <h4>About Us</h4>
                <p>Home</p>
                <p>About Us</p>
                <p>Work With Us</p>
                <p>Our Blog</p>
                <p>Terms & Conditions</p>
            </div>
            <div class="footer__col">
                <h4>Services</h4>
                <p>Search Terms</p>
                <p>Advance Search</p>
                <p>Privacy Policy</p>

            </div>
            <div class="footer__col">
                <h4>Contact Us</h4>
                <p>
                    <i class="ri-map-pin-2-fill"></i> 45, ForestHill Summerstrand, Port Elizabeth
                </p>
                <p><i class="ri-mail-fill"></i> eNompilo@gmail.com</p>
                <p><i class="ri-phone-fill"></i> (+012) 3456 789</p>
            </div>
        </div>
        <div class="footer__bar">
            <div class="footer__bar__content">
                <p>Copyright © 2023 Innovative Geeks. All rights reserved.</p>
                <div class="footer__socials">
                    <span><i class="ri-instagram-line"></i></span>
                    <span><i class="ri-facebook-fill"></i></span>
                    <span><i class="ri-heart-fill"></i></span>
                    <span><i class="ri-twitter-fill"></i></span>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>
